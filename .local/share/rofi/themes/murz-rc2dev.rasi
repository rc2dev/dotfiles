configuration {
  font: "Noto Mono 12";
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;

  /* Catppuccin-macchiato colors */
  bg: #24273afa;  /* Transparency set here */
  bg-alt: #363a4f;
  fg: #cad3f5;
  fg-alt: #a5adcb;

  /* Default colors */
  //bg: #18181Bfc; /* Transparency set here. */
  //bg-alt: #20212Cfc;
  //fg: #A0A0AB;
  //fg-alt: #5D5E72;

  background-color: rgba(0, 0, 0, 0);
  text-color: @fg-alt;
}

window {
  //border: 3px;
  //border-color: @fg-alt;
  //border-radius: 8px;

  transparency: "real";
  background-color: @bg;
  height: 100%;
  width: 400px;
  location: west;
  anchor: west;

  /* To set as sidebar:
   * - anchor and location: west
   * - height: 100%
   * - comment borders */

  /* To set as center:
   * - anchor and location: center
   * - max-height: 80%
   * - uncomment borders */
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  children: [prompt, entry];
}

prompt {
  padding: 10px;
  margin-right: 0px;
}

entry {
  padding: 10px 5px;
}

listview {
  lines: 14;
  fixed-height: false;
  dynamic: false;
  scrollbar: true;
}

scrollbar {
  background-color: @bg-alt;
  handle-color: @fg;
  margin: 0 0 0 6px;
}

element {
  children: [element-text];
}

element-text {
  padding: 10px 20px;
}

element-text selected {
  background-color: @bg-alt;
  text-color: @fg;
}
