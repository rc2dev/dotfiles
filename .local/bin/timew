#!/usr/bin/env bash
#
# Timewarrior wrapper. Features:
# - Call it on the right server.
# - Update dwmbar.
#
# Copyright (C) 2021 Rafael Cavalcanti <https://rafaelc.org/dev>
# Licensed under GPLv3

readonly host="timew@pi"

[[ "$1" == "--skip-dwmbar" ]] && readonly skip_dwmbar=1 && shift

# :color forces color on, since this ssh command wonâ€™t allocate a tty.
ssh "$host" timew :color "$@"

# Update dwmbar
if [[ $XDG_SESSION_DESKTOP == dwm && ! $skip_dwmbar == 1 ]]; then
  dwmbar
fi
