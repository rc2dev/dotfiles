#!/usr/bin/env bash
#
# dmenu script for opening documents
#
# Author: Rafael Cavalcanti <https://rafaelc.org/dev>

set -euo pipefail
readonly dmenu="${DMENU:-dmenu}"
readonly prompt="Open"
declare -ar rofi_opts=(-theme-str "window { width: 900px; }")


if [[ $dmenu =~ ^rofi ]]; then
  launcher_opts=("${rofi_opts[@]}")
else
  launcher_opts=()
fi

fdfind \
  --follow \
  --exclude "backups" --exclude "Cursos/" --exclude "Notes/" \
  . ~/Documents ~/Downloads "$NOTES"/resources ~/Sync ~/Videos |
  sed "s|$HOME|\~|" |
  sort |
  $dmenu "${launcher_opts[@]}" -p "$prompt"  |
  sed "s|~|$HOME|" |
  xargs -r -d'\n' -P 0 -n 1 xdg-open
