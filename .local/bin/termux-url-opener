#!/data/data/com.termux/files/usr/bin/bash
# Author: Rafael Cavalcanti <https://rafaelc.org/dev>

set -euo pipefail
. ~/.zprofile
readonly url="$1"

cd ~/Downloads
if ! yt-dlp "$url"; then
  content="Error downloading"
  priority="high"
else
  content="Finished downloading"
  priority="low"
fi

termux-notification \
  --content "$content: $url" \
  --priority "$priority" \
  --title "Termux" \
  --action "termux-open $url"

