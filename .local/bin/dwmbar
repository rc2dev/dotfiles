if [[ "$(pulsemixer --get-mute)" == "1" ]]; then
  vol_icon="ğŸ”‡"
else
  vol_icon="ğŸ”Š"
fi
bar_vol="${vol_icon} $(pulsemixer --get-volume | cut -f 1 -d ' ')%"
bar_date="$(date +"%a, %b %e")"
bar_time="ğŸ• $(date +"%R")"
xsetroot -name " ${bar_vol} | ${bar_date} | ${bar_time} "
