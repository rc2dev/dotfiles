alias y="yadm"

# Shorter xdg-open
# Run fzf if no args.
o() {
	if [[ $# -gt 0 ]]; then
		xdg-open "$@"
		return
	fi

	fzf --height 100% --margin '7%,5%' | xargs -r -d'\n' -P 0 -n 1 xdg-open
}

# Set default options
alias caffeinate="caffeinate --socket $XIDLEHOOK_SOCK"
alias fd="fd --hidden --follow --no-ignore-vcs --exclude '.git' --exclude 'node_modules'"
alias spotdl="spotdl --output-format m4a"

