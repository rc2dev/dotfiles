! Place Control_L also on Caps_Lock
clear lock
clear control
keycode 66 = Control_L
keycode 37 = Control_L
add lock = Caps_Lock
add control = Control_L Control_R

! MF68: Reorganize media keys
keycode 121 = XF86AudioRaiseVolume NoSymbol XF86AudioRaiseVolume NoSymbol XF86AudioRaiseVolume XF86AudioRaiseVolume
keycode 122 = XF86AudioMute NoSymbol XF86AudioMute NoSymbol XF86AudioMute XF86AudioMute
keycode 123 = XF86AudioLowerVolume NoSymbol XF86AudioLowerVolume NoSymbol XF86AudioLowerVolume XF86AudioLowerVolume
keycode 171 = XF86Tools NoSymbol XF86Tools NoSymbol XF86Tools XF86Tools
keycode 172 = XF86AudioNext NoSymbol XF86AudioNext NoSymbol XF86AudioNext XF86AudioNext
keycode 173 = XF86AudioStop XF86Eject XF86AudioStop XF86Eject XF86AudioStop XF86Eject XF86AudioStop XF86Eject
keycode 174 = XF86AudioPlay XF86AudioPause XF86AudioPlay XF86AudioPause XF86AudioPlay XF86AudioPause XF86AudioPlay XF86AudioPause
keycode 179 = XF86AudioPrev NoSymbol XF86AudioPrev NoSymbol XF86AudioPrev XF86AudioPrev

! MF68 br: Swap apostrophe and escape
keycode 9 = apostrophe quotedbl apostrophe quotedbl notsign notsign notsign
keycode 49 = Escape quotedbl Escape

! MF68 br: Access the extra key from ABNT-2 keyboard
keycode 38 = a A a A backslash AE ae AE a A ae AE a A ae AE
keycode 39 = s S s S bar section ssharp section s S ssharp section s S ssharp section

! br: Place EuroSign on 3rd level of 'e'
keycode 26 = e E e E EuroSign EuroSign EuroSign EuroSign e E EuroSign EuroSign e E EuroSign EuroSign
