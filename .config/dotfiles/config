[core]
  hooksPath = ~/.config/dotfiles/hooks

[status]
  showUntrackedFiles = no

[alias]
  install = ! ~/.config/dotfiles/install

[filter "cleanXsettingsd"]
  clean = "sed -E 's#^Net/ThemeName .*#Net/ThemeName \"\"#;s#^Net/IconThemeName .*#Net/IconThemeName  \"\"#'"
