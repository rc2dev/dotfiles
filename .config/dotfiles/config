[core]
  worktree = ~  # Needed for creating vim-fugitive's command
  hooksPath = ~/.config/dotfiles/hooks

[status]
  showUntrackedFiles = no

[alias]
  install = ! ~/.config/dotfiles/install

[filter "cleanXsettingsd"]
  clean = "sed -E 's#^Net/ThemeName .*#Net/ThemeName \"\"#'"
