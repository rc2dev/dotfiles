# sxhkdrc
#
# Author: Rafael Cavalcanti <https://rafaelc.org/dev>

super + b
  blueman-manager

super + c
  io.elementary.calculator

super + shift + d
  light-dark

super + e; {super + e, h, n, y}
  { \
    $TERMINAL -e nvim, \
    $TERMINAL -e nvim +'Telescope oldfiles', \
    $TERMINAL -d "$NOTES" -e nvim +'Telescope find_files cwd='$NOTES'/notes', \
    $TERMINAL -e dotfiles cmd nvim +'Telescope git_files' \
  }

super + f
  $TERMINAL -e ranger

super + shift + f
  nautilus

super + o
  bash -c "\
    fd --follow --exclude 'Cursos/' --exclude 'Notes/' . ~/Documents ~/Downloads $NOTES/resources ~/Videos | \
    sed \"s|$HOME|\~|\" | \
    sort | \
    dmenu -l 10 -p "open:" | \
    sed \"s|~|$HOME|\" | \
    xargs -r -d'\n' -P 0 -n 1 xdg-open \
  "

super + p
  keepassxc

super + shift + q
  xkill

super + {_, shift} + r
  { \
    dmenu_radio, \
    dmenu_radio Random, \
  }

super + s; {m, q, y}
 { \
  $TERMINAL -n cmus -e cmus, \
  qimgv, \
  dmenu_yt, \
 }

super + v
  pavucontrol

super + {_, shift} + w
  $BROWSER {_, --incognito}

super + z
  $BROWSER https://www.myfitnesspal.com/pt/food/diary

super + {_, shift, ctrl } + period
  dunstctl { context, close, history-pop }

super + Return
  $TERMINAL

alt + Tab
  dswitcher

ctrl + alt + v
  clipmenu

Print + {_, shift}
  flameshot gui {_, --delay 5000}

XF86Calculator
  io.elementary.calculator

