super + a
  xdg-open ~/Sync/pessoal/hor√°rios.pdf

super + b
  blueman-manager

{super + c, XF86Calculator}
  gnome-calculator

super + e
  $TERMINAL -e nvim

super + shift + d
  light-dark toggle

super + f
  nemo

super + {_, shift, ctrl } + i
  dunstctl { \
    close, \
    history-pop, \
    context; dunstctl close \
  }

super + n
  $TERMINAL -e nvim +TeNotes

super + o
  dmenu_document

super + p
  keepassxc

super + shift + q
  xkill

super + r
  $TERMINAL -e ranger

super + {_, shift} + u
  { \
    dmenu_radio, \
    $TERMINAL -n cmus -e cmus \
  }

super + v
  pavucontrol

super + {_, shift} + w
  $BROWSER {_, --incognito}

super + {_, shift} + y
  mpv --shuffle { \
    "https://www.youtube.com/playlist?list=WL", \
    "https://www.youtube.com/playlist?list=PLG0ys6U09lfnoVWU2iV-6RW2l6IQBlPX8" \
  }

super + Return
  $TERMINAL

# -i is unneded with patched dmenu to case insensitve,
# but necessary using rofi.
ctrl + alt + v
  clipmenu -i

ctrl + alt + m
  rofimoji

Print + {_, shift}
  flameshot gui {_, --delay 5000}
