# sxhkdrc
#
# Author: Rafael Cavalcanti <https://rafaelc.org/dev>

super + a
  dmenu_ticktask

super + b
  blueman-manager

{super + c, XF86Calculator}
  gnome-calculator

super + {_, shift } + e
  { \
    $TERMINAL -e nvim, \
    thunderbird, \
  }

super + shift + d
  theme-mode toggle

super + f
  firefox-esr

super + {_, shift, ctrl } + n
  dunstctl { \
    close, \
    history-pop, \
    context; dunstctl close \
  }

super + o
  dmenu_document

super + p
  keepassxc

super + shift + q
  xkill

super + r
  $TERMINAL -e lf

super + s
  dmenu_pomodoro

super + {_, shift} + u
  { \
    dmenu_radio, \
    $TERMINAL -n cmus -e cmus \
  }

super + {_, shift} + v
  { \
    pavucontrol, \
    mpv "$(xclip -o)" \
  }

super + w
  $BROWSER

super + y
  mpv --shuffle "https://www.youtube.com/playlist?list=WL"

super + Return
  $TERMINAL

# Arguments:
# -i: unneded with patched dmenu to case insensitve, but necessary using rofi.
# -theme-str: to larger width.
ctrl + alt + v
  clipmenu -i -theme-str "window \{ width: 900px; \}"

ctrl + alt + m
  rofimoji

Print + {_, shift}
  flameshot gui {_, --delay 5000}
