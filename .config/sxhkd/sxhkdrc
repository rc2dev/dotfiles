super + a
  dmenu_radio

super + b
  dmenu-bluetooth

super + c
  gnome-calculator

super + shift + d
  light-dark

super + {_, shift} + e
  { \
    $TERMINAL -e vim +History, \
    $TERMINAL -e yadm enter vim +GFiles \
  }

super + f
  $TERMINAL -e ranger

super + shift + f
  nemo

super + {_, shift} + n
  $TERMINAL -e notes { name, dump }

super + p
  keepassxc

super + shift + q
  xkill

super + r
  dmenu_url

# Try to copy link from browser before running dmenu_url.
# Both tilde and --clear-modifiers are a workaround for this to work.
# Pressing shift+F6 brings the focus back to the webpage.
~super + shift + r
  xdotool key --clearmodifiers ctrl+l ctrl+c shift+F6 && dmenu_url

super + s; {c, C, e, m, v, w}
 { \
  chromium, \
  chromium --temp-profile, \
  thunderbird, \
  $TERMINAL -n cmus -e cmus, \
  pavucontrol, \
  qimgv $WALLPAPERS, \
 }

super + x
  $TERMINAL -e bash -c "\
    fd $FD_ARGS --no-hidden --exclude 'Cursos/' --exclude 'Notes/' . ~/Documents ~/Downloads $NOTES/resources ~/Videos | \
    fzf --height 100% --margin 7%\,5% --no-preview | \
    xargs -r -d'\n' -P 0 -n 1 xdg-open \
  "

super + {_, shift} + w
  x-www-browser {_, --private-window}

super + y
  dmenu_yt

super + z
  x-www-browser https://www.myfitnesspal.com/pt/food/diary

super + {_, shift, ctrl } + period
  dunstctl { context, close, history-pop }

super + Return
  $TERMINAL

alt + Tab
  dswitcher

ctrl + alt + v
  clipmenu

Print
  flameshot gui

Print + shift
  flameshot launcher

XF86Calculator
  gnome-calculator

