log() {
  local -r upper_text="${*^^}"
  echo -e "\033[1m${upper_text}\033[0m"
}

cat << "EOF"
       _         _     _ _
  ___ | |__  ___(_) __| (_) __ _ _ __
 / _ \| '_ \/ __| |/ _` | |/ _` | '_ \
| (_) | |_) \__ \ | (_| | | (_| | | | |
 \___/|_.__/|___/_|\__,_|_|\__,_|_| |_|


 _ __ ___ _ __   ___
| '__/ _ \ '_ \ / _ \
| | |  __/ |_) | (_) |
|_|  \___| .__/ \___/
         |_|

This will sync your obsidian local repo (pull, commit and push).

EOF

readonly repo_dir="$HOME/Documents/obsidian-main"

if [[ ! -d "$repo_dir" ]]; then
  printf "Repo not found. Exiting.\n"
  exit
fi

cd "$repo_dir"


log "Pulling..."
git pull

log "Commiting and pushing..."
git add .
readonly device_name="$(getprop ro.product.brand) $(getprop ro.product.device)"
git commit --stat --message="Update on ${device_name:-Termux}: $(date '+%Y-%m-%d %H:%M:%S')"
git push
